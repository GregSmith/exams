<!DOCTYPE html>
<html>
<head>
  <title>Exams</title>
  <%= stylesheet_link_tag "scaffold" %>
  <%= stylesheet_link_tag "exams", :media => "all" %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<%= render "layouts/header" %>
  <div id="columns">
    <div id="side">
      <% if @cart %>
        <%= hidden_div_if(@cart.line_items.empty?, :id => 'cart') do %>
          <%= render @cart %>        
        <% end %>
      <% end %>
      <%= link_to 'Home', store_path %><br />
      
      <a href="http://www.">Questions</a><br />
      <a href="http://www.">About</a><br />
      <a href="http://www.">LSAT Prep Courses Online</a><br />
    </div>
    <div id="main">
      <div id="user_nav">
          <% if user_signed_in? %>
              Signed in as <%= current_user.email %>
              <%= link_to 'Sign out', destroy_user_session_path, :method => :delete %>
              <% else %>
                  <%= link_to 'Sign up', new_user_registration_path %> or
                  <%= link_to 'Sign in', new_user_session_path %>
                  <%= button_to 'Confirm', store_path, :action => "confirmuser" %>
          <% end %>
      </div>
      <% if notice %>
        <p id="notice"><%= notice %></p>
      <% end %>
      <p class="alert"><%= alert %></p>
      <%= yield %>
    </div>
  </div>
</body>
</html>
